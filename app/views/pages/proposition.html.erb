<div class="wrapper">
  <div class="container container-form">
    <form action="#" class="form">
      <div class="form-group row">
        <div class="col-xs-6">
          <input type="text" id="firstname" class="form-control" placeholder="Prénom">
        </div>
        <div class="col-xs-6">
          <input type="text" id="lastname" class="form-control" placeholder="Nom">
        </div>
      </div>
      <div class="form-group row">
        <div class="col-xs-6">
          <input type="text" id="email" class="form-control" placeholder="Adresse email">
        </div>
        <div class="col-xs-6">
          <input type="text" id="phonenumber" class="form-control" placeholder="Numéro de téléphone">
        </div>
      </div>
      <div class="form-group">
        <input type="text" id="titreproposition" class="form-control" placeholder="Titre de votre proposition">
      </div>
      <div class="form-group">
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="10" placeholder="Votre proposition plus en détails"></textarea>
      </div>

      <input type="submit" value="Envoyer ma proposition" class="btn btn-primary form-control">
    </form>
  </div>
</div>
<%= render 'shared/bluefooter' %>

